<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preferences_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <fragment
        android:id="@+id/preferences_action_bar"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:name="uk.me.lewisdeane.urbandictionary.PreferenceActionBarFragment"
        tools:layout="@layout/fragment_action_bar_preferences"/>

    <fragment
        android:id="@+id/preferences"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="uk.me.lewisdeane.urbandictionary.PreferenceFragment"
        tools:layout="@layout/fragment_preference"></fragment>

</LinearLayout>